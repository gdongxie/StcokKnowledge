<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_meta_num"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/sel_homework_checkbox_bg"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/sel_homework_checkbox_text_color"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/sel_homework_checkbox_content_text_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_meta_num"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_meta_num" />

</androidx.constraintlayout.widget.ConstraintLayout>
