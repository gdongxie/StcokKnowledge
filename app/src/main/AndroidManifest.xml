<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stock.answer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.stock.answer.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.stock.answer.ui.activities.KnowledgeDetailsActivity"/>
        <activity android:name="com.stock.answer.ui.activities.QuestionActivity" />
        <activity android:name="com.stock.answer.ui.activities.FeedBackActivity" />
        <activity android:name="com.stock.answer.ui.register.RegisterActivity" />
        <activity
            android:name="com.stock.answer.ui.login.ui.login.LoginActivity"
            android:launchMode="singleTop" />
        <activity android:name="com.stock.answer.ui.activities.AgreementActivity" />
        <activity android:name="com.stock.answer.ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.stock.answer.ui.activities.MainActivity" />
        <activity android:name="com.stock.answer.ui.activities.WebViewActivity" />
        <activity android:name="com.stock.answer.ui.activities.ExamListActivity" />
        <activity android:name="com.stock.answer.ui.activities.ExamActivity" />
    </application>

</manifest>